@using CovidBilgilendirme.Models.classes
@model List<Employe>

@{
    ViewBag.Title = "AboutEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i>Ekibimiz</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/Index/">Home</a></li>
            <li><i class="fa fa-laptop"></i>Ekibimiz</li>
        </ol>
    </div>
</div>

<div class="container">
    <h5 class="textBold">Satır Sayısı Seçin</h5>
    <div class="form-group same">
        <select class="form-control" name="state" id="maxRows">
            <option value="5000">Show ALL Rows</option>
            <option value="3">3</option>
            <option value="5">5</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="70">70</option>
            <option value="100">100</option>
        </select>
        <a class="btn btn-success textBold leftSpace" href="/Admin/AddEmployee/">Çalışan Ekle<i class="icon_plus_alt2 leftSpace"></i></a>
    </div>

    <table class="table table-striped table-class table-bordered" id="table-id">
        <tr>
            <th class="title"><i class="icon_profile"></i> İsim</th>
            <th><i class="icon_image"></i> Fotoğraf</th>
            <th><i class="icon_documents_alt"></i> Açıklama</th>
            <th><i class="fas fa-briefcase"></i> Meslek</th>
            <th><i class="icon_cogs"></i>Edit/Delete</th>
        </tr>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeName</td>
                <td><img src="@employee.ImageUrl" class="picture" /></td>
                <td>@employee.Description</td>
                <td>@employee.EmployeJob</td>
                <td>
                    <div class="btn-group same">
                        <a class="btn btn-primary" href="/Admin/GetEmployee/@employee.ID"><i class="icon_refresh"></i></a>
                        <a class="btn btn-danger" href="/Admin/DeleteEmployee/@employee.ID"><i class="icon_trash_alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </table>

    <div class='pagination-container'>
        <nav>
            <ul class="pagination">

                <li data-page="prev">
                    <span> < <span class="sr-only">(current)</span></span>
                </li>
                <li data-page="next" id="prev">
                    <span> > <span class="sr-only">(current)</span></span>
                </li>
            </ul>
        </nav>
    </div>

</div>
