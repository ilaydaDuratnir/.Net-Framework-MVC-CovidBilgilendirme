@model CovidBilgilendirme.Models.classes.CovidTable

@{
    ViewBag.Title = "AddTest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i>Test Ekleme</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="~/Admin/Index/">Home</a></li>
            <li><i class="fa fa-laptop"></i>Test Ekleme</li>
        </ol>
    </div>
</div>

<form class="form-group" action="~/Admin/AddTest/" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Günlük Test Sayısı</label>
            <input type="text" class="form-control" id="NumberTest" name="NumberTest" placeholder="Günlük Test Sayısı" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Günlük Vaka Sayısı</label>
            <input type="text" class="form-control" id="NumberCase" name="NumberCase" placeholder="Günlük Vaka Sayısı" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Günlük Vefat Sayısı</label>
            <input type="text" class="form-control" id="NumberDeath" name="NumberDeath" placeholder="Günlük Vefat Sayısı" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Günlük Iyileşen Sayısı</label>
            <input type="text" class="form-control" id="NumberHealing" name="NumberHealing" placeholder="Günlük Iyileşen Sayısı" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Günlük Ağır Hasta Sayısı</label>
            <input type="text" class="form-control" id="NumberSeriouslyIll" name="NumberSeriouslyIll" placeholder="Günlük Ağır Hasta Sayısı" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Zatürre Oranı</label>
            <input type="text" class="form-control" id="RatePneumonia" name="RatePneumonia" placeholder="Zatüre Oranı (%)" required>
        </div>
    </div>
    <button type="submit" class="btn btn-success" style="margin-left:15px;width:200px">Günlük Test Ekle</button>
</form>