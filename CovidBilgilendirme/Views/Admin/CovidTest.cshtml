@using CovidBilgilendirme.Models.classes
@model List<Tester>

@{
    ViewBag.Title = "CovidTest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12">

        <h3 class="page-header"><i class="icon_profile"></i>Test Yaptıranlar</h3>

        <ol class="breadcrumb">

            <li><i class="fa fa-home"></i><a href="~/Admin/Index/">Home</a></li>

            <li><i class="icon_profile"></i>Test Yaptıranlar</li>

        </ol>

    </div>

</div>

<div class="row">

    <div class="col-lg-12">

        <section class="panel">

            <header class="panel-heading">

                Test Yaptıranlar

            </header>
            <div class="form-group" style="display:none">
                <select class="form-control" name="state" id="maxRows">
                    <option value="5">5</option>
                </select>
            </div>
            <table class="table table-striped table-advance table-hover table-class" id="table-id">

                <tbody>

                    <tr>

                        <th><i class="icon_profile"></i>İsim</th>

                        <th><i class="icon_profile"></i>Soyisim</th>

                        <th> <i class="icon_profile"></i>Tc No</th>

                        <th><i class="icon_calendar"></i> Doğum Yılı</th>

                        <th><i class="icon_mail_alt"></i> Email</th>

                        <th><i class="icon_mobile"></i> Telefon No</th>

                        <th><i class="icon_documents_alt"></i> Sonuç</th>

                        <th><i class="icon_cogs"></i> İşlem</th>

                    </tr>

                    @foreach (var tester in Model)

                    {

                        <tr>

                            <td>@tester.FirstName</td>

                            <td>@tester.LastName</td>

                            <td>@tester.TcNo</td>

                            <td>@tester.BirthYear</td>

                            <td>@tester.Email</td>

                            <td>@tester.Phone</td>

                            <td>@tester.Result</td>

                            <td>

                                <div class="btn-group">

                                    <a class="btn btn-info" href="/Admin/TesterDetail/@tester.ID"><i class="fa fa-info-circle" aria-hidden="true"></i></a>

                                    <a class="btn btn-primary" href="/Admin/GetTester/@tester.ID"><i class="icon_refresh"></i></a>

                                    <a class="btn btn-danger" href="/Admin/DeleteTester/@tester.ID"><i class="icon_trash_alt"></i></a>

                                </div>

                            </td>

                        </tr>



                    }



                </tbody>

            </table>
            <div class='pagination-container'>
                <nav>
                    <ul class="pagination">

                        <li data-page="prev">
                            <span> < <span class="sr-only">(current)</span></span>
                        </li>
                        <li data-page="next" id="prev">
                            <span> > <span class="sr-only">(current)</span></span>
                        </li>
                    </ul>
                </nav>
            </div>
        </section>

    </div>

</div> 