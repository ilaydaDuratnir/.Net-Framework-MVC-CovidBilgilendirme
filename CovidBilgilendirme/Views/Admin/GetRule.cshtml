@model CovidBilgilendirme.Models.classes.Law

@{
    ViewBag.Title = "GetRule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i>14-Kural Güncelleme</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/Index/">Home</a></li>
            <li><i class="fa fa-laptop"></i>14-Kural Güncelleme</li>
        </ol>
    </div>
</div>

@using (Html.BeginForm("UpdateRules", "Admin", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    <br />
    @Html.HiddenFor(x => x.ID)

    @Html.LabelFor(x => x.Title, new { @class = "labelCss" })
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control black"})
    <br />
    @Html.LabelFor(x => x.Description, new { @class = "labelCss" })
    @Html.TextAreaFor(x => x.Description, 4, 1, new { @class = "form-control black"})
    <br />
    @Html.LabelFor(x => x.WarningTitle, new { @class = "labelCss" })
    @Html.TextBoxFor(x => x.WarningTitle, new { @class = "form-control warningTitle"})
    <br />
    @Html.LabelFor(x => x.WarningDescription, new { @class = "labelCss" })
    @Html.TextBoxFor(x => x.WarningDescription, new { @class = "form-control warningDescription"})
    <br />
    @Html.LabelFor(x => x.Image, new { @class = "imageLabel" })
    @Html.TextBoxFor(x => x.Image, new { @class = "form-group", type = "file"})
    <button class="btn btn-success textBold">Kural Güncelle</button>
}

