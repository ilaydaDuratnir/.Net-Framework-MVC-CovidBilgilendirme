@using CovidBilgilendirme.Models.classes
@model List<CovidTable>

@{
    ViewBag.Title = "HomeCovidTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i> Covid-19 Genel Tablo</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="~/Admin/Index/">Home</a></li>
            <li><i class="fa fa-laptop"></i>Covid-19 Genel Tablo</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="container">
        <h5 style="font-weight:bold">Satır Sayısı Seçin</h5>
        <div class="form-group same">
            <select class="form-control" name="state" id="maxRows">
                <option value="5000">Show ALL Rows</option>
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="70">70</option>
                <option value="100">100</option>
            </select>
            <a class="btn btn-success addButton" href="/Admin/AddTest/">Test Sonucu Ekle<i class="icon_plus_alt2 leftSpace"></i></a>
        </div>

        <table class="table table-striped table-class table-advance table-hover" id="table-id">
            <tr>
                <th><i class="icon_profile"></i> Test Sayısı</th>
                <th><i class="fas fa-head-side-cough"></i> Vaka Sayısı</th>
                <th><i class="fas fa-procedures"></i> Vefat Sayısı</th>
                <th><i class="fas fa-hospital-user"></i> İyileşen Sayısı</th>
                <th><i class="fas fa-ambulance"></i> Ağır Hasta Sayısı</th>
                <th><i class="fas fa-lungs-virus"></i> Zatürre Oranı</th>
                <th><i class="icon_cogs"></i> Edit/Delete</th>
            </tr>
            @foreach (var test in Model)
            {
                <tr>
                    <td>@test.NumberTest</td>
                    <td>@test.NumberCase</td>
                    <td>@test.NumberDeath</td>
                    <td>@test.NumberHealing</td>
                    <td>@test.NumberSeriouslyIll</td>
                    <td>@test.RatePneumonia</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/Admin/GetTest/@test.ID"><i class="icon_refresh"></i></a>
                            <a class="btn btn-danger" href="/Admin/DeleteTest/@test.ID"><i class="icon_trash_alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>

        <div class='pagination-container'>
            <nav>
                <ul class="pagination">

                    <li data-page="prev">
                        <span> < <span class="sr-only">(current)</span></span>
                    </li>
                    <li data-page="next" id="prev">
                        <span> > <span class="sr-only">(current)</span></span>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</div>
