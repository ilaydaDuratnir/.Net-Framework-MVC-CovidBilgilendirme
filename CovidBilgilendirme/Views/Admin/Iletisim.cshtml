@model List<CovidBilgilendirme.Models.classes.Iletisim>

@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-table"></i> İletişim</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Yönetici Paneli</a></li>
                    <li><i class="fa fa-table"></i>İletişim</li>
                </ol>
            </div>
        </div>

        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        İletişim Tablosu
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i>&nbsp;İsim</th>
                                <th><i class="icon_mail"></i>&nbsp;E-Posta</th>
                                <th><i class="icon_documents_alt"></i>&nbsp;Konu</th>
                                <th><i class="icon_documents"></i>&nbsp;Mesaj</th>

                            </tr>

                            @{ for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].Isim</td>
                                        <td>@Model[i].Email</td>
                                        <td>@Model[i].Konu</td>
                                        <td>@Model[i].Mesaj</td>

                                    </tr>
                                } }

                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
<!--main content end-->
