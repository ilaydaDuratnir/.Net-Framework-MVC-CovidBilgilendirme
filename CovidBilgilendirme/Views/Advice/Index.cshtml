@model List<CovidBilgilendirme.Models.classes.View_TavsiyeList>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="doctors">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage text_align_center ">
                    <br /><br />
                    <h2>NE YAPMALIYIZ?</h2>
                </div>
            </div>
        </div>

        <iframe width="100%" height="450" src="https://www.youtube.com/embed/3Z7MrCQHO-k" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

        <br /><br /><br />
        <div class="titlepage text_align_center ">
            <br /><br />
            <h2>DOKTORLAR NE ÖNERİYOR?</h2>
        </div>
        <div class="row d_flex">

            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <div class=" col-md-6">
                        <div id="ho_efcet" class="reader text_align_center">
                            <i><img src="@Model[i].DoktorFotograf" width="111" height="111" alt="#" /></i>
                            <h3>@Model[i].DoktorAdiSoyadi</h3>
                            <p><b>@Model[i].TavsiyeBalik</b><br /><br /> @Model[i].TavsiyeIcerik </p>
                            <span><img src="~/Content/images/do.png" alt="#" /></span>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

